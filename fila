using System;
using System.Collections.Generic;
using System.Linq;
using System.Text;
using System.Threading.Tasks;

namespace Fila
{
    class Fila
    {
        private char[] elementos;
        private int inicio;
        private int fim;
        private int tamanho;
        private int capacidade;

        // Inicializa a fila com o tamanho indicado pelo usuário
        public Fila(int capacidade)
        {
            this.capacidade = capacidade;
            elementos = new char[capacidade];
            inicio = 0;
            fim = -1;
            tamanho = 0;
        }

        // Enfileirar
        public void Enqueue(char caractere)
        {
            if (tamanho == capacidade)
            {
                Console.WriteLine("Erro: a fila está cheia! ( ｡ •`ᴖ´• ｡)")
            }
            fim = (fim + 1) % capacidade;
            elementos[fim] = caractere;
            tamanho++;
        }
        // Desenfileirar
        public char Dequeue()
        {
            if (Empty())
            {
                Console.WriteLine("A fila está vazia! ૮₍⇀‸↼‶₎ა");
            }
            char valor = elementos[inicio];
            inicio = (inicio + 1) % capacidade;
            tamanho--;
            return valor;
        }
        // Verificar se a fila está vazia
        public bool Empty()
        {
            return tamanho == 0;
        }

        // Exibir elementos da fila
        public void Exibir()
        {
            if (Empty())
            {
                Console.WriteLine("A fila está vazia! ૮₍⇀‸↼‶₎ა");
                return
            }
            Console.Write("Fila: ");
            for (int i = 0; i < tamanho; i++)
            {
                int index = (inicio + i) % capacidade;
                Console.Write(elementos[index] + " ");
            }
            Console.WriteLine();
        }

        public int Size()
        {
            return tamanho;
        }
        // Elemento de início da fila
        public char Head()
        {
            return elementos[inicio];
        }

    }
    internal class Program
    {
        static void Main()
        {
            Fila fila = new Fila(10);
            int opcao;
            char valor;

            do
            {
                Console.WriteLine("Escolha uma opção: ");
                Console.WriteLine("0 . Sair");
                Console.WriteLine("1 . Enfileirar");
                Console.WriteLine("2 . Head");
                Console.WriteLine("3 . Desenfileirar");
                Console.WriteLine("4 . Tamanho da fila");
                Console.WriteLine("5 . Exibir fila");
                opcao = int.Parse(Console.ReadLine());

                switch (opcao)
                {
                    case 0:
                        Console.WriteLine(" ");
                        break;
                    case 1:
                        Console.WriteLine("Digite um valor a ser enfileirado: ");
                        valor = Console.ReadKey().KeyChar;
                        fila.Enqueue(valor);
                        break;
                    case 2:
                        valor = fila.Head();
                        Console.WriteLine("Início da fila: " + valor);
                        break;
                    case 3:
                        valor = fila.Dequeue();
                        Console.WriteLine("Elemento desenfileirado: " + valor);
                        break;
                    case 4:
                        Console.WriteLine("Quantidade de elementos na fila: " + fila.Size());
                        break;
                    case 5:
                        fila.Exibir();
                        break;
                    default:
                        Console.WriteLine("Opção inválida! >:(");
                        break;
                }

            } while (opcao != 0);
        }
    }
}
